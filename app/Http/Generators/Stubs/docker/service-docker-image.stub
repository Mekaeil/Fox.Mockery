version: '3.9'
services:

  $SERVICE_NAME$:
    container_name: $SERVICE_NAME$_mocker
    image: stoplight/prism:4
    command: 'mock -h 0.0.0.0 /tmp/$SERVICE_OPEN_API_SPECIFICATION_DIR$/$SERVICE_NAME$/index.oas3.yml'
    volumes:
      - ./../../$SERVICE_OPEN_API_SPECIFICATION_DIR$/$SERVICE_NAME$/index.oas3.yml:/tmp/$SERVICE_OPEN_API_SPECIFICATION_DIR$/$SERVICE_NAME$/index.oas3.yml:ro
    ports:
      - '$PORT$:4010'
